<Window x:Class="LedgerSync.UI.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LedgerSync.UI"
        mc:Ignorable="d"
        xmlns:viewmodel="clr-namespace:LedgerSyncViewModel;assembly=LedgerSyncViewModel"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        x:Name="ShellViewWindow"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowState="{Binding ShellModels.SystemState,UpdateSourceTrigger=PropertyChanged}"
        d:DataContext="{d:DesignInstance Type=viewmodel:ShellViewModel}"
        Opacity="0.8"
        Title="LedgerSync"
        Height="850"
        Width="1500"
        Style="{StaticResource WindowStyle}">
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <behaviors:InvokeCommandAction Command="{Binding ShellViewLoadCommand,UpdateSourceTrigger=PropertyChanged}"
                                           PassEventArgsToCommand="True"
                                           CommandParameter="{Binding ElementName=ShellViewWindow,UpdateSourceTrigger=PropertyChanged}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Width="150"
              HorizontalAlignment="Right">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Content="&#xEF2D;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="30"
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand"
                    Command="{Binding MiniSystemCommand,UpdateSourceTrigger=PropertyChanged}" />
            <Button Grid.Column="1"
                    Content="&#xEF2E;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="30"
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand"
                    Command="{Binding MaxSystemCommand,UpdateSourceTrigger=PropertyChanged}" />
            <Button Grid.Column="2"
                    Content="&#xEF2C;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="30"
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand"
                    Command="{Binding ExitSystemCommand,UpdateSourceTrigger=PropertyChanged}" />

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                        Content="密钥"
                        Command="{Binding SecretKeyCommand,UpdateSourceTrigger=PropertyChanged}"
                        FontSize="30"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="LightGray"
                        BorderThickness="0.5" />
                <Button Grid.Row="1"
                        Content="数据"
                        Command="{Binding TradeDataCommand,UpdateSourceTrigger=PropertyChanged}"
                        FontSize="30"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="LightGray"
                        BorderThickness="0.5" />
                <Button Grid.Row="2"
                        Content="同步"
                        Command="{Binding SyncDataLocalCommand,UpdateSourceTrigger=PropertyChanged}"
                        FontSize="30"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="LightGray"
                        BorderThickness="0.5" />
                <Button Grid.Row="3"
                        Content="分析"
                        Command="{Binding AnalyzeTradeListCommand,UpdateSourceTrigger=PropertyChanged}"
                        FontSize="30"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="LightGray"
                        BorderThickness="0.5" />
                <Button Grid.Row="4"
                        Content="导出"
                        Command="{Binding PrintCommand,UpdateSourceTrigger=PropertyChanged}"
                        FontSize="30"
                        Foreground="White"
                        Background="Transparent"
                        BorderBrush="LightGray"
                        BorderThickness="0.5" />
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.15*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0"
                      Background="Transparent"
                      Visibility="{Binding ShellModels.CoinVisibility,UpdateSourceTrigger=PropertyChanged}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="0.1*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ListBox  Grid.Row="0"
                              Background="Transparent"
                              Visibility="{Binding ShellModels.CoinVisibility,UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding ShellModels.ObservableCollectionCoinEntity,UpdateSourceTrigger=PropertyChanged}"
                              HorizontalContentAlignment="Stretch"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Button Grid.Column="0"
                                            Content="{Binding Asset,UpdateSourceTrigger=PropertyChanged}"
                                            Command="{Binding DataContext.QueryTradeListSymbolCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding Asset,UpdateSourceTrigger=PropertyChanged}"
                                            FontSize="30"
                                            Foreground="White"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            HorizontalContentAlignment="Left"
                                            VerticalContentAlignment="Center"
                                            Cursor="Hand" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <ComboBox Grid.Row="1"
                              ItemsSource="{Binding ShellModels.ObservableCollectionYear,UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding ShellModels.ItemYear,UpdateSourceTrigger=PropertyChanged}"
                              FontSize="30"
                              Foreground="Gray"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Center" />
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="1"
                                    Content="一月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                            <Button Grid.Column="1"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="2"
                                    Content="二月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="3"
                                    Content="三月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                            <Button Grid.Column="1"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="4"
                                    Content="四月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="5"
                                    Content="五月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                            <Button Grid.Column="1"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="6"
                                    Content="六月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="7"
                                    Content="七月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                            <Button Grid.Column="1"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="8"
                                    Content="八月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                        </Grid>
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="9"
                                    Content="九月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                            <Button Grid.Column="1"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="10"
                                    Content="十月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                        </Grid>
                        <Grid Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="11"
                                    Content="十一月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                            <Button Grid.Column="1"
                                    Command="{Binding QueryTradeListMonthCommand,UpdateSourceTrigger=PropertyChanged}"
                                    CommandParameter="12"
                                    Content="十二月"
                                    FontSize="20"
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderBrush="LightGray"
                                    BorderThickness="0.5" />
                        </Grid>
                    </Grid>
                </Grid>
                <Frame Grid.Column="1"
                       Visibility="{Binding ShellModels.CoinVisibility,UpdateSourceTrigger=PropertyChanged}"
                       Source="{Binding ShellModels.NavigationContent,UpdateSourceTrigger=PropertyChanged}"
                       NavigationUIVisibility="Hidden"
                       BorderBrush="Transparent"
                       BorderThickness="0"
                       JournalOwnership="UsesParentJournal" />
                <Frame Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Visibility="{Binding ShellModels.SecretKeyVisibility,UpdateSourceTrigger=PropertyChanged}"
                       Source="{Binding ShellModels.NavigationSecretKey,UpdateSourceTrigger=PropertyChanged}"
                       NavigationUIVisibility="Hidden"
                       BorderBrush="Transparent"
                       BorderThickness="0"
                       JournalOwnership="UsesParentJournal" />
            </Grid>
        </Grid>
    </Grid>
</Window>
